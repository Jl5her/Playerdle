{
  "name": "playerdle",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "validate:sports": "tsx scripts/validate-sports.ts",
    "build": "pnpm run validate:sports && tsc -b && vite build",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "preview": "vite preview",
    "scrape": "pnpm run scrape:all",
    "scrape:test": "pnpm run scrape:rosters -- --sport=nfl --test",
    "scrape:all": "pnpm run scrape:rosters && pnpm run generate:answer-pool",
    "scrape:rosters": "tsx scripts/scrape-rosters.ts",
    "generate:answer-pool": "tsx scripts/generate-answer-pool.ts",
    "generate:answer-pool:mlb": "tsx scripts/generate-mlb-answer-pool.ts",
    "generate:answer-pool:nba": "tsx scripts/generate-nba-answer-pool.ts",
    "generate:answer-pool:nhl": "tsx scripts/generate-nhl-answer-pool.ts",
    "scrape:mlb": "pnpm run scrape:rosters -- --sport=mlb",
    "scrape:nfl": "pnpm run scrape:rosters -- --sport=nfl && pnpm run generate:answer-pool",
    "scrape:nhl": "pnpm run scrape:rosters -- --sport=nhl && pnpm run generate:answer-pool:nhl",
    "scrape:nba": "pnpm run scrape:rosters -- --sport=nba && pnpm run generate:answer-pool:nba"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.2.0",
    "@fortawesome/free-solid-svg-icons": "^7.2.0",
    "@fortawesome/react-fontawesome": "^3.2.0",
    "@tailwindcss/vite": "^4.1.18",
    "canvas-confetti": "^1.9.4",
    "fuse.js": "^7.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "cheerio": "^1.2.0",
    "puppeteer": "^24.36.1",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "puppeteer"
    ]
  }
}
